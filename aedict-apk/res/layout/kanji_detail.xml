<ScrollView 
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" >
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingRight="?android:attr/scrollbarSize" android:paddingLeft="?android:attr/scrollbarSize" >
	<LinearLayout 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical" >
		<LinearLayout 
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_width="fill_parent">
		
<TextView android:layout_height="wrap_content" android:id="@+id/kanji" android:text="K" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_horizontal" android:textColor="?android:attr/textColorPrimary" android:textSize="100dp"></TextView>
			<TableLayout 
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_weight="1" android:gravity="center_horizontal"
				android:layout_gravity="center">
				<TableRow 
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="@string/stroke" android:gravity="right" android:textColor="#777"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/stroke"
						android:text="S" android:paddingLeft="3dp"
						android:textColor="?android:attr/textColorPrimary"></TextView>
				</TableRow>
				<TableRow 
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="@string/grade" android:gravity="right" android:textColor="#777"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/grade"
						android:text="G" android:paddingLeft="3dp"
						android:textColor="?android:attr/textColorPrimary"></TextView>
				</TableRow>
				<TableRow 
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/jlptLevel" android:gravity="right" android:textColor="#777"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/jlpt"
						android:text="J" android:paddingLeft="3dp"
						android:textColor="?android:attr/textColorPrimary"></TextView>
				</TableRow>
				<TableRow 
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/skip" android:gravity="right" android:textColor="#777"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/skip"
						android:text="S-K-I" android:paddingLeft="3dp"
						android:textColor="?android:attr/textColorPrimary"></TextView>
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<se.fnord.android.layout.FlowLayout android:id="@+id/onyomi" 
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp">
		</se.fnord.android.layout.FlowLayout>
		<se.fnord.android.layout.FlowLayout android:id="@+id/kunyomi" 
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp">
		</se.fnord.android.layout.FlowLayout>
		<se.fnord.android.layout.FlowLayout android:id="@+id/namae" 
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp">
		</se.fnord.android.layout.FlowLayout>
		<se.fnord.android.layout.FlowLayout android:id="@+id/english" 
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp">
		</se.fnord.android.layout.FlowLayout>
		<LinearLayout 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal" android:layout_gravity="center_horizontal"
			android:layout_marginTop="12dp">
			<Button android:id="@+id/copy" android:layout_height="wrap_content"
				android:text="@string/copy" android:layout_width="fill_parent"
				android:layout_weight="1"></Button>
			<Button android:id="@+id/showStrokeOrder" android:layout_height="wrap_content"
				android:text="@string/strokeOrder" android:layout_width="fill_parent"
				android:layout_weight="1"></Button>
			<Button android:id="@+id/addToNotepad" android:layout_height="wrap_content"
				android:text="@string/addToNotepad" android:layout_width="fill_parent"
				android:layout_weight="1"></Button>
		</LinearLayout>

	</LinearLayout>
	</LinearLayout>
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/exampleSentences" android:textColor="#FFF" android:background="#666"/>
		<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/tanakaExamples"></LinearLayout>
		</LinearLayout>
</ScrollView>
