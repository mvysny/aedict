<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:id="@+id/main" android:paddingRight="?android:attr/scrollbarSize"
		android:paddingLeft="?android:attr/scrollbarSize"
		android:layout_weight="1">
		<TextView android:layout_height="wrap_content" android:id="@+id/question"
			android:text="K" android:layout_width="fill_parent" android:gravity="center_horizontal"
			android:textColor="?android:attr/textColorPrimary" android:textSize="50dp" />
		<RadioGroup android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:id="@+id/radioGroup">
			<RadioButton android:layout_height="wrap_content"
				android:id="@+id/option1" android:text="Option1"
				android:layout_width="fill_parent" />
			<RadioButton android:layout_height="wrap_content"
				android:id="@+id/option2" android:text="Option2"
				android:layout_width="fill_parent" />
			<RadioButton android:layout_height="wrap_content"
				android:id="@+id/option3" android:text="Option3"
				android:layout_width="fill_parent" />
		</RadioGroup>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<Button android:layout_height="wrap_content" android:id="@+id/next"
			android:text="@string/next" android:layout_width="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
