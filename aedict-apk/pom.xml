<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>sk.baka.aedict</groupId>
		<artifactId>aedict</artifactId>
		<version>2.7</version>
	</parent>
	<artifactId>aedict-apk</artifactId>
	<packaging>android:apk</packaging>
	<name>Aedict APK</name>
	<description>A english-japanese dictionary which uses Jim Breen's edict data. Does not require japanese keyboard. This is the Android APK builder.</description>
	
	<properties>
		<masa.version>1.1-svn81-vyzivus3</masa.version>
		<android.version>2.2</android.version>
		<android.api>2.2</android.api>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>${android.version}</version>
		</dependency>
       <dependency>
           <groupId>${project.groupId}</groupId>
           <artifactId>aedict-common</artifactId>
           <version>${project.version}</version>
       </dependency>
		<dependency>
			<groupId>sk.baka.autils</groupId>
			<artifactId>autils</artifactId>
			<version>0.4</version>
		</dependency>
		<dependency>
			<groupId>sk.baka.tools</groupId>
			<artifactId>bakatools</artifactId>
			<version>0.5</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
   
	<!-- Build environment -->
	<build>
		<!-- set the application version to the "version" file -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
				   <buildcommands>
				   	<buildcommand>com.android.ide.eclipse.adt.ResourceManagerBuilder</buildcommand>
				      <buildcommand>com.android.ide.eclipse.adt.PreCompilerBuilder</buildcommand>
				      <buildcommand>org.eclipse.jdt.core.javabuilder</buildcommand>
				      <buildcommand>com.android.ide.eclipse.adt.ApkBuilder</buildcommand>
				   </buildcommands>
				   <additionalProjectnatures>
				      <projectnature>com.android.ide.eclipse.adt.AndroidNature</projectnature>
				      <projectnature>org.eclipse.jdt.core.javanature</projectnature>
				   </additionalProjectnatures>
				   <classpathContainers>
				   	<classpathContainer>org.eclipse.jdt.launching.JRE_CONTAINER</classpathContainer>
				   </classpathContainers>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jvending.masa.plugins</groupId>
				<artifactId>maven-aapt-plugin</artifactId>
				<version>${masa.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.jvending.masa.plugins</groupId>
				<artifactId>maven-dx-plugin</artifactId>
				<version>${masa.version}</version>
				<extensions>true</extensions>
				<configuration>
					<!-- fixes OutOfMemory errors on MacOSX while building dex. Issue http://code.google.com/p/aedict/issues/detail?id=2 -->
					<jvmArguments><jvmArgument>-Xmx512m</jvmArgument></jvmArguments>
				</configuration>
			</plugin>
			<plugin>
			   <groupId>org.jvending.masa.plugins</groupId>
			   <artifactId>maven-toolchains-plugin</artifactId>
			   <version>${masa.version}</version>
			   <configuration>
			      <toolchains>
			         <android>
			            <version>${android.api}</version>
			         </android>
			      </toolchains>
			   </configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
	      <id>release</id>
	      <build>
	         <plugins>
	            <plugin>
						<groupId>org.jvending.masa.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>${masa.version}</version>
						<configuration>
							<keystore>aedict.keystore</keystore>
							<alias>ambientcertss</alias>
							<keypass>${cert.keypass}</keypass>
							<storepass>${cert.storepass}</storepass>
						</configuration>
					</plugin>
	         </plugins>
	      </build>
	   </profile>
	</profiles>
</project>

